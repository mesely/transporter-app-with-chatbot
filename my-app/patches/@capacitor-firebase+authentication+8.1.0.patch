+#if compiler(>=5.3) && $NonescapableTypes
+// Capacitor APIs are available as-is.
+#else
+extension CAPPluginCall {
+    @objc func reject(_ message: String, _ code: String? = nil, _ error: Error? = nil, _ data: PluginCallResultData? = nil) {
+        unavailable(message)
+    }
+
+    func getString(_ key: String) -> String? {
+        let value = getString(key, "")
+        return value.isEmpty ? nil : value
+    }
+
+    func getBool(_ key: String) -> Bool? {
+        if let value = options[key] as? Bool {
+            return value
+        }
+        return nil
+    }
+
+    func getArray(_ key: String) -> JSArray? {
+        if let value = options[key] as? JSArray {
+            return value
+        }
+        return nil
+    }
+
+    func getArray<T>(_ key: String, _ ofType: T.Type) -> [T]? {
+        let value = getArray(key, [])
+        return value.compactMap { $0 as? T }
+    }
+
+    func getInt(_ key: String) -> Int? {
+        if let value = options[key] as? Int {
+            return value
+        }
+        if let value = options[key] as? NSNumber {
+            return value.intValue
+        }
+        return nil
+    }
+
+    func getObject(_ key: String) -> JSObject? {
+        if let value = options[key] as? JSObject {
+            return value
+        }
+        return nil
+    }
+}
+
+extension PluginConfig {
+    func getArray(_ configKey: String, _ defaultValue: JSArray? = nil) -> JSArray? {
+        let config = getConfigJSON()
+        if let value = config[configKey] as? JSArray {
+            return value
+        }
+        return defaultValue
+    }
+}
+
+extension CAPBridgeProtocol {
+    var viewController: UIViewController? {
+        (self as? CapacitorBridge)?.viewController
+    }
+
+    var webView: WKWebView? {
+        (self as? CapacitorBridge)?.webView
+    }
+}
+#endif
